#include <iostream>

using namespace std;

void set_array(int arr[], size_t size,int value)
{
	for (size_t i{ 0 }; i < size; ++i)
		arr[i] = 500;
}

void print_array(int arr[], size_t size)
{
	for (size_t i{ 0 }; i < size; ++i)
		cout << arr[i] << "|" << endl;
}

int main()
{
	int array[]{ 5,6,7,8,2,1,4 };
	print_array(array, 6);
	set_array(array, 5, 100);
	print_array(array, 5);


	return 0;

}
